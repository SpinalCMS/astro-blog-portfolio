export async function getStaticPaths() {
    // create the array of all image URLs
    const glob = await Astro.glob('/public/images/shoots/**/*.jpg'); // glob to get all the images
    // convert the array / object into a simple array
    const array = glob.map(result => {
        const trim = "/public/images/".length; // remove the base from the URL
        return result["default"].slice(trim);
    })
    
    // build an array to contain the proper base URLs
    const final = array.map(f => {
        return buildFileDetailPath(f);
    })

    return final.map(f => (
        {
            params: { file: f }
        }
    ))
}

const params = Astro.params;

// add the filename back to the file param
// this is the local file
const url = params.file + ".jpg"

// the url of the image to create the download links
const ucr = buildPublicPath(params.file) + ".jpg";

// get the metadata for the file
const metadata = await getMetadata(url);
