    <style lang="scss">
        @use '../assets/styles/breakpoints' as *;

        header {
            margin-bottom: var(--section-spacing-sm);
            
            @include breakpoint(md) {
                margin-bottom: var(--section-spacing-lg);
            }
        }

        .intro {
            text-align: center;

            *:not(:last-child) {
                margin-bottom: 2rem;
            }

            p {
                max-width: 90%;
                margin: 0 auto;
            }

            @include breakpoint(md) {
                text-align: left;

                h1 {
                    margin-top: 0;
                }
                p {
                    max-width: 25rem;
                    margin: 0;
                }
            }
            @include breakpoint(lg) {
                display: grid;
                grid-template-columns: repeat(2, 1fr);
                grid-template-rows: 1fr;
                grid-column-gap: 0px;
                grid-row-gap: 0px;
            }
        }

        .circle-bg {
            border-radius: 50%;
            background-color: var(--amber-20);
            width: 150px;
            height: 150px;
            position: relative;
            margin: 0 auto;

            img {
                border-radius: 50%;
                position: absolute;
                top: -10px;
                right: 4px;
                width: 150px;
                height: 150px;
            }

            @include breakpoint(md) {
                margin: 0;
            }
            @include breakpoint(lg) {
                order: 1;
                align-self: center;
                justify-self: end;
                width: 220px;
                height: 220px;

                img {
                    width: 220px;
                    height: 220px;
                }
            }
        }

        .headline {
            display: flex;
            flex-direction: row;
            justify-content: space-between;
            align-items: center;
            margin-bottom: var(--space-sm);

            a {
                color: var(--secondary-50)
            }
        }

        .recent-posts, .recent-shoots {
            padding-top: var(--section-spacing-sm);
            padding-bottom: var(--section-spacing-sm);

            @include breakpoint(md) {
                padding-top: var(--section-spacing-lg);
                padding-bottom: var(--section-spacing-lg);
            }

            h3 {
                font-size: var(--text-xl);
                line-height: var(--line-height-md);
            }

            .post, .shoot {
                .meta {
                    display: flex;
                    flex-direction: column;
                    gap: var(--space-xs);
                    color: var(--grayscale-50);

                    @include breakpoint(lg) {
                        flex-direction: row;
                        gap: var(--space-md);
                    }
                }

                .tags, .time {
                    display: flex;
                    flex-direction: row;
                    gap: var(--space-xs);
                }
            }
        }

        .recent-posts {
            background-color: var(--secondary-10);

            .posts {
                display: flex;
                flex-direction: column;
                gap: var(--space-md);

                .post {
                    border-radius: .4rem;
                    background-color: var(--white);
                    padding: var(--space-md) var(--space-lg);
                }

                @include breakpoint(lg) {
                    flex-direction: row;
                }
            }
        }

        .recent-shoots {
            .shoot {
                margin-bottom: var(--space-xl);

                &:last-child {
                    margin-bottom: 0;
                }

                @include breakpoint(md) {
                    display: flex;
                    gap: var(--space-md);
                }

                .cover {
                    img {
                        border-radius: .4rem;
                        object-fit: cover;
                        height: 200px;
                        width: 100%;
                    }

                    @include breakpoint(md) {
                        width: 100%;
                        
                        img { 
                            object-fit: cover;
                            height: 100%;
                        }
                    }
                }
            }
        }

        h2 { 
            font-size: var(--text-xl);
            font-weight: 400;
        }
    </style>
</head>

