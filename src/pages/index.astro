---
    // components
    import Navigation from '../components/Navigation.astro'
---

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width">
    <title>Dev</title>

    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    
    <link rel="stylesheet" href={Astro.resolve('../assets/styles/_global.scss')}>
    <style lang="scss">
        @use '../assets/styles/breakpoints' as *;

        header {
            margin-bottom: var(--section-spacing-sm);
            
            @include breakpoint(md) {
                margin-bottom: var(--section-spacing-lg);
            }
        }

        .intro {
            text-align: center;

            *:not(:last-child) {
                margin-bottom: 2rem;
            }

            @include breakpoint(md) {
                text-align: left;

                p {
                    max-width: 25rem;
                }
            }
            @include breakpoint(lg) {
                display: grid;
                grid-template-columns: repeat(2, 1fr);
                grid-template-rows: 1fr;
                grid-column-gap: 0px;
                grid-row-gap: 0px;
            }
        }

        .circle-bg {
            border-radius: 50%;
            background-color: var(--amber-20);
            width: 150px;
            height: 150px;
            position: relative;
            margin: 0 auto;

            img {
                border-radius: 50%;
                position: absolute;
                top: -10px;
                right: 4px;
                width: 150px;
                height: 150px;
            }

            @include breakpoint(md) {
                margin: 0;
            }
            @include breakpoint(lg) {
                order: 1;
                align-self: center;
                justify-self: end;
                width: 220px;
                height: 220px;

                img {
                    width: 220px;
                    height: 220px;
                }
            }
        }

        .posts {
            background-color: var(--secondary-10);
            padding-top: var(--section-spacing-sm);
            padding-bottom: var(--space-md);

            @include breakpoint(md) {
                padding-top: var(--section-spacing-lg);
            }
        }

        .headline {
            display: flex;
            flex-direction: row;
            justify-content: space-between;
            align-items: center;

            a {
                color: var(--secondary-50)
            }
        }
        h2 { 
            font-size: var(--text-xl);
            font-weight: 400;
        }
    </style>
</head>

<body>
    <main>
        <header class="container">
            <Navigation />

            <div class="intro">
                <div class="circle-bg">
                    <img src="/assets/me.jpg" class="img-round" />
                </div>

                <div>
                    <h1>
                        Hi, I'm Erik.<br />
                        I'm a CRO &amp;<br />
                        SEM Expert.
                    </h1>
                    <p>Amet minim mollit non deserunt ullamco est sit aliqua dolor do amet sint. Velit officia consequat duis enim velit mollit. Exercitation veniam consequat sunt nostrud amet.</p>
                    <a href="/" class="btn btn-primary">
                        Contact Me
                    </a>
                </div>
            </div>
        </header>

        <section class="posts">
            <div class="container">
                <div class="headline">
                    <h2>Recent Posts</h2>
                    <a href="/">View All</a>
                </div>
            </div>
        </section>
    </main>
</body>
</html>
