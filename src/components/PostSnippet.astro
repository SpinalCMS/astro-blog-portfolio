---
// functions
import { timeAgo } from "@/functions/DateTime"

// props
export interface Props {
    post: object
}
const { post } = Astro.props;
---

<div class="space-y-4">
    <a class="thick-underline" href={post.url} title={post.title}>
        <h3 class="w-fit">{post.title}</h3>
    </a>

    <p class="font-light">{post.description}</p>

    <div class="flex justify-between gap-2  text-stone-500 font-light capitalize">
        <time>{timeAgo(post.date)}</time>
        <span>{post.category}</span>
    </div>
</div>