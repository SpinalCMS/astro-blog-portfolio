---
// props
export interface Props {
    headers: object,
}
const { headers } = Astro.props;
---

<style lang="scss">
    ul {
        list-style-type: none;
        padding: 0;

        display: flex;
        flex-direction: column;
        gap: var(--space-sm);
    }
    li {


        &.depth-3 {
            margin-left: var(--space-md);
        }
        &.depth-4 {
            margin-left: var(--space-lg);
        }
    }
</style>

<div>
    <ul>
        {headers.map(h => 
            <li class="depth-${h.depth}">
                <a href="#${h.slug}">{h.text}</a>
            </li>
        )}
    </ul>
</div>