---
// modules
import { BackgroundPicture } from "astro-imagetools/components"

// components
import Container from "@/components/Container"
---

<BackgroundPicture src="/src/assets/images/shoots/2020/2020-02-28-lit-show-day-two/lit-show-2020_019.jpg">
    <div class="bg-white bg-clip-padding backdrop-filter backdrop-blur-sm bg-opacity-90 py-40">
        <Container>
            <div>
                <h2 class="h1">Contact Me</h2>
                
                <div class="flex flex-col lg:flex-row justify-between mt-8 gap-8">
                    <div class="grid grid-cols-1 sm:grid-cols-2 gap-8">
                        <div class="space-y-6">
                            <p class="font-light text-xl leading-loose">Looking for help with car photography or have questions about digital marketing? Fill out the form and I'll get back to you ASAP.</p>
                        </div>
                        
                        <form action="/contact/success/" name="Contact - Page" method="POST" data-netlify="true" class="space-y-6">
                            <div class="space-y-2">
                                <label for="name">Full name</label>
                                <input type="text" name="name" id="name" autocomplete="name" required>
                            </div>

                            <div class="space-y-2">
                                <label for="email">Email</label>
                                <input id="email" name="email" type="email" autocomplete="email" required>
                            </div>
                            
                            <div class="space-y-2">
                                <label for="message">Message</label>
                                <textarea id="message" name="message" rows="4"></textarea>
                            </div>
                            
                            <div>
                                <button type="submit" class="btn-primary">Send Message</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </Container>
    </div>
</BackgroundPicture>