---
// components
import Container from "@/components/Container"

// functions
import { buildPublicPath } from "@/functions/Media"

const bg = buildPublicPath("shoots/2020/2020-02-29-lit-show-day-three/lit-show-2020_002.jpg")
---

<div class="text-neutral-800 py-24">
    <div class="bg-white bg-opacity-50" data-blink-src={bg}>
    <Container>
        <div class="flex flex-col lg:flex-row justify-between mt-8 gap-8">
            <div class="grid grid-cols-2 gap-8 items-center">
                <div class="space-y-6">
                    <h2 class="h1">Contact Me</h2>
                    <p class="font-light text-xl leading-loose">Looking for help with car photography or have questions about digital marketing? Fill out the form and I'll get back to you ASAP.</p>
                </div>
                
                <form action="/contact/success/" name="Contact - Page" method="POST" data-netlify="true" class="grid grid-cols-1 gap-y-6 w-full">
                    <div>
                        <label for="name" class="sr-only">Full name</label>
                        <input type="text" name="name" id="name" autocomplete="name" class="block w-full py-3 px-4 placeholder-gray-500 rounded focus:ring-1 focus:ring-slate-400 outline-0" placeholder="Your name" required>
                    </div>

                    <div>
                        <label for="email" class="sr-only">Email</label>
                        <input id="email" name="email" type="email" autocomplete="email" class="block w-full py-3 px-4 placeholder-gray-500 rounded focus:ring-1 focus:ring-slate-400 outline-0" placeholder="Email" required>
                    </div>
                    
                    <div>
                        <label for="message" class="sr-only">Message</label>
                        <textarea id="message" name="message" rows="4" class="block w-full py-3 px-4 placeholder-gray-500 rounded focus:ring-1 focus:ring-slate-400 outline-0" placeholder="Message"></textarea>
                    </div>
                    
                    <div>
                        <button type="submit" class="btn-contact">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </Container>
    </div>
</div>
</div>