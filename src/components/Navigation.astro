---
// components
import Container from "@/components/Container"

// data
import Navigation from "@/data/navigation"
---

<Container>
    <header class="flex flex-row mt-12 justify-between items-center">
        <div class="flex flex-col md:flex-row md:items-center gap-3 md:gap-8">
            <!-- logo -->
            <div>
                <a class="font-extrabold tracking-tighter text-3xl lowercase" href="/" title="Homepage">
                    ErikOlsen
                </a>
            </div>

            <!-- navigation items -->
            <nav class="flex flex-row gap-6">
                {Navigation.map((item) => (
                    <a class="text-stone-800 lowercase hover:underline" href={item.url} title={item.display}>
                        {item.display}
                    </a>
                ))}
                <a class="md:hidden text-stone-800 lowercase hover:underline" href="/contact" title="Contact Me">Contact</a>
            </nav>
        </div>

        <a href="/contact" class="btn-primary hidden md:block">
            Contact Me
        </a>
    </header>
</Container>