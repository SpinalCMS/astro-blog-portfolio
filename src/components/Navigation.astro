---
// components
import Container from "@/components/Container"

// data
import Navigation from "@/data/navigation"
---

<Container>
    <header class="flex flex-row py-8 mt-24 justify-between items-center">
        <div class="flex flex-row items-center gap-x-6">
            <!-- logo -->
            <div>
                <a class="font-extrabold tracking-tighter text-3xl uppercase" href="/" title="Homepage">
                    ErikOlsen
                </a>
            </div>

            <!-- navigation items -->
            <nav class="flex flex-row gap-x-4">
                {Navigation.map((item) => (
                    <a class="text-stone-300" href={item.url} title={item.display}>
                        {item.display}
                    </a>
                ))}
            </nav>
        </div>

        <button class="bg-white hover:bg-gray-100 text-gray-800 font-semibold py-2 px-4 border border-gray-400 rounded shadow">
            Button
        </button>
    </header>
</Container>