---
// props
export interface Props {
    tags: object,
    base: string
}
const { tags, base } = Astro.props;
---
<style lang="scss">
    li {
        @apply
            inline
            p-0
    }
    li:nth-of-type(n + 2):not(:last-child) {
        &::before {
            content: ",";
        }
    }
</style>

<ul>
    {tags.map(t =>
        <li class="tag">
            <a href={`/${base}/tags/${t}`} title={`Posts tagged ${t}`}>{t}</a>
        </li>
    )}
</ul>