---
// props
export interface Props {
    categories: object,
    base: string
}
const { categories, base } = Astro.props;
---
    
<ul class="category-list">
    {categories.map(c =>
        <li class="category">
            <a href={`/${base}/categories/${c}`} title={`Posts categorized under ${c}`}>{c}</a>
        </li>
    )}
</ul>