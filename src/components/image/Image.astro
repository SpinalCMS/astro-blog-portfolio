---
// functions
import { getDimensions, buildPublicPath, getMetadata } from '@/functions/Media'

// data
import settings from "@/data/settings"

// props
export interface Props {
    file: string;
    classes?: string;
    alt?: string;
    lightbox?: boolean;
}
const { file, classes, alt, lightbox } = Astro.props;

const url = buildPublicPath(file);
const dimensions = getDimensions(file); // get the image dimensions

let caption = '';
if (typeof alt === 'undefined') {
    caption =  await getMetadata(file, "caption"); // grab the caption from the image to use as an alt tag
}
---

<img
    data-blink-ops=`overlay-uuid: ${settings.image.logo}; overlay-dimensions: 50%25x50%25; overlay-coordinates: center`
    data-blink-src={url}
    class={classes}
    alt={alt ? alt : caption}
    width={dimensions.width}
    height={dimensions.height}
>