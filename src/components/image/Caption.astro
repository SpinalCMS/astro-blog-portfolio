---
// functions
import { getMetadata, buildFileDetailPath } from "@/functions/Media"

// props
export interface Props {
    file: string;
    showTitle?: boolean;
    showMeta?: boolean;
}
const { file, showTitle = false, showMeta = false } = Astro.props;

const metadata = await getMetadata(file); // get the metadata for the caption
---

<figcaption>
    <div class="summary">
        {showTitle ? <div class="title">${metadata.title}</div> : <div class="caption">${metadata.caption}</div> }
        {showMeta ? 
            <a href="/photography/photo/${buildFileDetailPath(file)}">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-info-square" viewBox="0 0 16 16">
                    <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z"/>
                    <path d="m8.93 6.588-2.29.287-.082.38.45.083c.294.07.352.176.288.469l-.738 3.468c-.194.897.105 1.319.808 1.319.545 0 1.178-.252 1.465-.598l.088-.416c-.2.176-.492.246-.686.246-.275 0-.375-.193-.304-.533L8.93 6.588zM9 4.5a1 1 0 1 1-2 0 1 1 0 0 1 2 0z"/>
                </svg>
            </a>
         : ``}
    </div>
</figcaption>

<style global lang="scss">
    @use "../../assets/styles/breakpoints" as *;

    figcaption {
        margin: 0;

        @include breakpoint(md) {
            margin: 0 var(--space-sm);
        }

        .summary {
            display: flex;
            flex-direction: row;
            justify-content: space-between;
            gap: var(--space-xs);
            margin-top: var(--space-md);
            margin-bottom: var(--space-md);
            font-size: var(--text-sm);

            .caption {
                font-weight: 340;
                font-size: var(--text-sm);
                display: -webkit-box;
                -webkit-line-clamp: 1;
                -webkit-box-orient: vertical;
                overflow: hidden;
            }
        }
    }
</style>